<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

	<!-- 数据库选项 
		p:driverClass 类名
		p:minPoolSize 最小池长度
		p:maxPoolSize 最大池长度
		p:initialPoolSize 初始化池长度 
		p:maxIdleTime 最大空闲时间,X秒内未使用则连接被丢弃。若为0则永不丢弃
		p:acquireIncrement 当连接池中的连接耗尽的时候c3p0一次同时获取的连接数
		p:idleConnectionTestPeriod 每X秒检查所有连接池中的空闲连接
		p:acquireRetryAttempts 定义在从数据库获取新连接失败后重复尝试的次数
	-->

	<bean id="baseDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close" abstract="true"
		p:driverClass="com.microsoft.sqlserver.jdbc.SQLServerDriver"
		p:minPoolSize="3" 
		p:maxPoolSize="10" 
		p:initialPoolSize="5" 
		p:maxIdleTime="60"
		p:acquireIncrement="3"
		p:idleConnectionTestPeriod="60"
		p:acquireRetryAttempts="30" />
	<bean id="ds_sms_joy" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=sms" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_support_temp_joy" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=cmppe_misc_2" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_web2g_joy" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=web_2g" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_msrv_joy" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=msrv" 
		p:user="sa" 
		p:password="megajoy" />
		
	<bean id="ds_sms_xt" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=sms" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_support_temp_xt" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=cmppe_misc_2" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_web2g_xt" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=web_2gxt" 
		p:user="sa" 
		p:password="megajoy" />
	<bean id="ds_msrv_xt" parent="baseDataSource" 
		p:jdbcUrl="jdbc:sqlserver://10.0.0.44:1433;databaseName=msrv" 
		p:user="sa" 
		p:password="megajoy" />
	<!-- 数据库选项 END -->
	
	<bean id="datasource" class="com.sol.kx.replenishment.dao.DynmicDataSource">
		<property name="targetDataSources">
			<map key-type="java.lang.String">
				<entry key="ds_sms_joy" value-ref="ds_sms_joy" />
				<entry key="ds_support_temp_joy" value-ref="ds_support_temp_joy" />
				<entry key="ds_web2g_joy" value-ref="ds_web2g_joy" />
				<entry key="ds_msrv_joy" value-ref="ds_msrv_joy" />
				
				<entry key="ds_sms_xt" value-ref="ds_sms_xt" />
				<entry key="ds_support_temp_xt" value-ref="ds_support_temp_xt" />
				<entry key="ds_web2g_xt" value-ref="ds_web2g_xt" />
				<entry key="ds_msrv_xt" value-ref="ds_msrv_xt" />
			</map>
		</property>
		<property name="defaultTargetDataSource" ref="ds_web2g_joy" />
	</bean>

	<bean  
	    id="transactionManager"
	    class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
	    p:dataSource-ref="datasource">
	</bean>

	<tx:annotation-driven transaction-manager="transactionManager" />
</beans>